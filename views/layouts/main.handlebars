<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Techy Blog</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <div class="">
      <header
        class="navbar navbar-light d-flex p-4"
        style="background-color: #e3f2fd"
      >
        <h1 class="flex-grow-1">
          <a href="/">The Techy Blog</a>
        </h1>
        <nav>
          <div>
            <!-- Conditionally render login or logout links -->
            {{#if logged_in}}
              <a class="px-2" href="/">Home</a>
              <a class="px-2" href="/dashboard">Dashboard</a>
              <button class="btn btn-light px-2" id="logout">Logout</button>
            {{else}}
              <a href="/login">Login</a>
            {{/if}}
          </div>
        </nav>
      </header>
      <main class="container container-fluid mt-5">
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer></footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>