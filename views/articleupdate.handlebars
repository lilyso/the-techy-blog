 <!-- Update a specific article template -->
<div class="row mt-4 ">
  <h3>Update Post:</h3>
  <form class="form edit-article ">
    <div>
      <label for="article-title">Title:</label>
      <input
        class="form-control"
        type="text"
        id="article-title"
        name="article-title"
        value="{{title}}"
      />
    </div>
    <div class="mt-2">
      <label for="article-funding">Summary:</label>
      <input
        class="form-control"
        type="text"
        id="summary"
        name="summary"
        value="{{summary}}"
        placeholder="Describe your article in a few sentences"
      />
    </div>

    <div class="mt-2">
      <label for="article-body">Body:</label>
      <textarea
        rows="8"
        class="form-control"
        id="content"
        name="content"
      >{{{content}}}</textarea>
    </div>
    <div class="d-flex justify-content-between">
      <button class="delete mt-4" data-id="{{id}}">Delete</button>
      <button type="submit" class="mt-4" id="id" data-id="{{id}}">Update</button>
    </div>
  </form>
<script src="/js/update-article.js"></script>